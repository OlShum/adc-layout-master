<p id="notice"><%= notice %></p>

<a href="#">Главная</a>
<%= link_to 'Энциклопедия', articles_path %>
<%= link_to 'Проекты', projects_path %>
<%= link_to 'О нас', about_index_path %>
<%= link_to 'Сотрудничество', new_cooperation_path(@cooperation) %>

<h1>Проекты</h1>

<% @projects.each do |project| %>

<div class="">
  <%= link_to project do %>
    <% def number
      number = [1, 2].sample
    end  %>
    
    <% if number == 1 %>
      <%= image_tag project.cover.url, width: 200 %>
    <% else %>
      <%= image_tag project.squarecover.url, width: 100 %>
    <% end %>

    <%= project.tag %>
    <%= project.head %> – <%= project.lead %>
    <%= project.author %>
  <% end %>


  <% link_to project %>
  <% if current_user && current_user.admin? %>
    <%= link_to 'Edit', edit_page_path(project) %>
  <% end %>
</div>

<% end %>
<br>
