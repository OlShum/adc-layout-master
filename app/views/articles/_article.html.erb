<%= link_to article do %>
  <%= article.type %>
  <%= article.head %>
  <%= image_tag article.cover.url (:article_preview) %>
  <%= image_tag article.squarecover.url (:article_preview_small) %>
<% end %>

<% if current_user && current_user.admin? %>
  <%= link_to 'Edit', edit_article_path(article) %>
  <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
